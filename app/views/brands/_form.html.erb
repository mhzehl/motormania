<% if @brand.errors.any? %>
<h4>Please fix the following errors:</h4>
  <ul>
    <% @brand.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
  </ul>
<% end %>

<%= form_for @brand do |f| %>
  <div>
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
  </div>

  <div>
    <%= f.label(:year_of_founding) %>
    <%= f.number_field(:year_of_founding) %>
  </div>

  <div>
    <%= f.label(:country_of_origin) %>
    <%= f.text_field(:country_of_origin) %>
  </div>

  <div>
    <%= f.submit "Add" %>
  </div>
<% end %>
