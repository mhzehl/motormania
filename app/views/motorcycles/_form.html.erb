<% if @motorcycle.errors.any? %>
<h4>Please fix the following errors:</h4>
  <ul>
    <% @motorcycle.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
  </ul>
<% end %>

<%= form_for [@brand, @motorcycle] do |f| %>
  <div>
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
  </div>

  <div>
    <%= f.label(:category) %>
    <%= f.text_field(:category) %>
  </div>

  <div>
    <%= f.label(:production_since) %>
    <%= f.number_field(:production_since) %>
  </div>

  <div>
    <%= f.label(:photo) %>
    <%= f.file_field(:photo) %>
  </div>

  <div>
    <%= f.submit "Add model" %>
  </div>
<% end %>
